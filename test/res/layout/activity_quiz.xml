<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:weightSum="1">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0px"
		android:layout_weight="0.1"
		android:orientation="vertical">

		<ImageView
			android:id="@+id/homeImageViewButton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="right"
			android:onClick="onClick"
			android:src="@drawable/ic_launcher2"/>
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="0.2"
		android:orientation="vertical">
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0px"
		android:layout_weight="0.1"
		android:orientation="vertical">

		<TextView
			android:id="@+id/textView1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:text="Q.이 표지판의 이름은?"
			android:textAppearance="?android:attr/textAppearanceMedium"/>

	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0px"
		android:layout_weight="0.2"
		android:gravity="center">

		<ImageView
			android:id="@+id/signsImageView"
			android:layout_width="wrap_content"
			android:layout_height="fill_parent"
			android:src="@drawable/ic_launcher"/>
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0px"
		android:layout_weight="0.2"
		android:weightSum="5">

		<View
			android:layout_width="0px"
			android:layout_height="wrap_content"
			android:layout_weight="1.15"/>

		<View
			android:id="@+id/correctAnswer1"
			android:layout_width="0px"
			android:layout_height="wrap_content"
			android:layout_weight="0.9"
			android:onClick="onClick"/>

		<View
			android:id="@+id/correctAnswer2"
			android:layout_width="0px"
			android:layout_height="wrap_content"
			android:layout_weight="0.9"
			android:onClick="onClick"/>

		<View
			android:id="@+id/correctAnswer3"
			android:layout_width="0px"
			android:layout_height="wrap_content"
			android:layout_weight="0.9"
			android:onClick="onClick"/>

		<View
			android:layout_width="0px"
			android:layout_height="wrap_content"
			android:layout_weight="1.15"/>
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_weight="0.2"
		android:layout_height="0px"
		android:gravity="center"
		android:orientation="vertical">

		<TextView
			android:id="@+id/hintTextView"
			android:onClick="onClick"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="HINT) 잘 모르겠어요"
			android:textAppearance="?android:attr/textAppearanceMedium"/>

	</LinearLayout>

</LinearLayout>